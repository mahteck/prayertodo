# SalaatFlow Phase II - Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
# Get your connection string from Neon Console (neon.tech)
# Format: postgresql://[user]:[password]@[host]/[database]?sslmode=require
DATABASE_URL=postgresql://user:password@host/salaatflow?sslmode=require

# CORS Configuration
# Comma-separated list of allowed origins
# For development, use your local frontend URL
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Server Configuration
# FastAPI server host and port
HOST=0.0.0.0
PORT=8000

# Environment
# Options: development, production
ENVIRONMENT=development
